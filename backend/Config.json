{
  "app": {
    "name": "NotesForge Professional",
    "version": "6.2",
    "theme": "flm"
  },
  "fonts": {
    "family": "Tahoma",
    "family_code": "Tahoma",
    "h1_family": "Trebuchet MS",
    "h2_family": "Trebuchet MS",
    "h3_family": "Trebuchet MS",
    "h4_family": "Trebuchet MS",
    "h5_family": "Trebuchet MS",
    "h6_family": "Trebuchet MS",
    "bullet_family": "Tahoma",
    "sizes": {
      "h1": 20,
      "h2": 18,
      "h3": 16,
      "h4": 14,
      "h5": 13,
      "h6": 12,
      "body": 12,
      "code": 11,
      "header": 10,
      "footer": 10
    }
  },
  "colors": {
    "h1": "#6200EA",
    "h2": "#651FFF",
    "h3": "#7C4DFF",
    "h4": "#B388FF",
    "h5": "#333333",
    "h6": "#555555",
    "body": "#1F1F1F",
    "code_background": "#1E1E2E",
    "code_text": "#D4D4D4",
    "table_header_bg": "#6200EA",
    "table_header_text": "#FFFFFF",
    "table_odd_row": "#F3EDFF",
    "table_even_row": "#FFFFFF",
    "table_border": "#D1C4E9",
    "link": "#6200EA"
  },
  "spacing": {
    "line_spacing": 1.5,
    "paragraph_spacing_after": 8,
    "heading_spacing_before": 14,
    "heading_spacing_after": 8,
    "code_indent": 0.35,
    "quote_indent": 0.5,
    "bullet_base_indent": 0.5,
    "bullet_indent_per_level": 0.75
  },
  "page": {
    "size": "A4",
    "orientation": "portrait",
    "margins": {
      "top": 1,
      "bottom": 1,
      "left": 1,
      "right": 1
    },
    "border": {
      "enabled": true,
      "width": 1,
      "color": "#000000",
      "style": "single",
      "offset": 24
    }
  },
  "watermark": {
    "enabled": false,
    "type": "text",
    "text": "CONFIDENTIAL",
    "image_path": "",
    "font": "Calibri",
    "size": 48,
    "color": "#6200EA",
    "opacity": 0.1,
    "rotation": 315,
    "position": "center",
    "scale": 100
  },
  "header": {
    "enabled": true,
    "text": "Frontlines Edu Tech",
    "size": 10,
    "color": "#ff7b00",
    "bold": true,
    "italic": false,
    "alignment": "center",
    "font_family": "Segoe UI",
    "show_page_numbers": false,
    "page_number_position": "header",
    "page_number_alignment": "center",
    "page_format": "Page X of Y",
    "page_number_style": "arabic",
    "separator": true,
    "separator_color": "#CCCCCC"
  },
  "footer": {
    "enabled": true,
    "text": "",
    "size": 8,
    "color": "#6200EA",
    "bold": false,
    "italic": true,
    "alignment": "right",
    "font_family": "Segoe UI",
    "show_page_numbers": true,
    "page_number_position": "footer",
    "page_number_alignment": "right",
    "page_format": "| Page X",
    "page_number_style": "arabic",
    "separator": true,
    "separator_color": "#CCCCCC"
  }
}